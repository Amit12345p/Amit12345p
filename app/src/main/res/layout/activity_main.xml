<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textStyle="bold"
                android:backgroundTint="@color/feedoes"
                android:textSize="15dp"
                android:textColor="@color/feedoes"
                android:layout_marginStart="50dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approved"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/feedos"
                android:layout_marginStart="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivered"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/feedose"
                android:layout_marginStart="40dp"/>
        </LinearLayout>


    <androidx.cardview.widget.CardView
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/patel"
        android:layout_margin="10dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donar Name : "
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/feedo"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amit Patel"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/feedo"
                android:layout_marginLeft="180dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number : "
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/feedo"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="********88"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/feedo"
                android:layout_marginLeft="200dp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address : "
                android:layout_marginTop="80dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/feedo"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*************ff"
                android:layout_marginTop="80dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/feedo"
                android:layout_marginLeft="180dp"/>
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donation Type : "
                android:layout_marginTop="110dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/feedo"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="People Only"
                android:layout_marginTop="110dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/feedo"
                android:layout_marginLeft="190dp"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cooked Before : "
                android:layout_marginTop="140dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/feedo"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 hr"
                android:layout_marginTop="140dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/feedo"
                android:layout_marginLeft="190dp"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type Of Place : "
                android:layout_marginTop="170dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/feedo"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurent"
                android:layout_marginTop="170dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/feedo"
                android:layout_marginLeft="190dp"/>


                <fragment
                    android:id="@+id/donarMap"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="210dp"
                    map:uiZoomControls="true"
                    tools:ignore="FragmentTagUsage"
                    tools:layout="@layout/activity_main" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/feedos"
                    android:text="Accept"
                    android:textColor="@color/feedo"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="290dp"
                    android:textAllCaps="false"/>





    </androidx.cardview.widget.CardView>



</LinearLayout>


